{
  "name": "@scaforge/cli",
  "version": "0.1.0",
  "description": "CLI for Scaforge - create and manage modular full-stack projects",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "scaforge": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "lint": "eslint src/",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@scaforge/core": "workspace:*",
    "commander": "^12.0.0",
    "prompts": "^2.4.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "@types/prompts": "^2.4.0",
    "tsup": "^8.0.0",
    "vitest": "^1.6.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "scaforge",
    "cli",
    "boilerplate",
    "scaffold",
    "fullstack",
    "nextjs",
    "nuxt",
    "tanstack",
    "hydrogen"
  ],
  "license": "MIT",
  "author": "Rakha Viantoni",
  "homepage": "https://scaforge.rakhaviantoni.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/rakhaviantoni/scaforge.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/rakhaviantoni/scaforge/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
